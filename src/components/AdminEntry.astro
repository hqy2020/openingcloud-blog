---
/**
 * 后台入口 — 仅保留快捷键和彩蛋逻辑（浮动按钮已移入 Navbar 齿轮图标）
 */
---

<script is:inline>
// Ctrl+Shift+A 快捷键跳转后台
document.addEventListener('keydown', function(e) {
  if (e.ctrlKey && e.shiftKey && e.key === 'A') {
    e.preventDefault();
    window.location.href = '/admin/posts';
  }
});

// 页脚版权连续点击 5 次彩蛋
(function() {
  let clicks = 0, timer;
  const footer = document.querySelector('footer');
  if (!footer) return;
  footer.addEventListener('click', function() {
    clicks++;
    clearTimeout(timer);
    if (clicks >= 5) { clicks = 0; window.location.href = '/admin/posts'; }
    timer = setTimeout(() => { clicks = 0; }, 2000);
  });
})();
</script>
