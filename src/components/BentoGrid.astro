<script>
  import VanillaTilt from 'vanilla-tilt';

  function initBentoTilt() {
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
    if (window.matchMedia('(hover: none)').matches) return; // è§¦å±ä¸å¯ç”¨

    const elements = document.querySelectorAll('[data-bento-tilt]') as NodeListOf<HTMLElement>;
    elements.forEach(el => {
      VanillaTilt.init(el, {
        max: 5,
        speed: 400,
        glare: true,
        'max-glare': 0.08,
        scale: 1.01,
      });
    });
  }

  initBentoTilt();
  document.addEventListener('astro:after-swap', initBentoTilt);
</script>
