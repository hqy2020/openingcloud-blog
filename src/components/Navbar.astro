---
/**
 * 导航栏 — openingClouds 品牌 logo + 管理齿轮 + 导航药丸 + GitHub
 */

const navItems = [
  { label: '首页', href: '/' },
  { label: '日记', href: '/journal/' },
  { label: '技术', href: '/tech/' },
  { label: '效率', href: '/learning/' },
  { label: '生活', href: '/life/' },
  { label: '数据', href: '/data/' },
  { label: '路线', href: '/timeline/' },
];

const currentPath = Astro.url.pathname;
---

<nav class="sticky top-0 z-50 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md border-b border-slate-200/60 dark:border-slate-700/60">
  <div class="max-w-6xl mx-auto px-4 h-14 flex items-center justify-between">
    <!-- Left: Admin gear + Logo -->
    <div class="flex items-center gap-3">
      <!-- 管理入口齿轮 -->
      <a
        href="/admin/posts"
        class="p-1.5 rounded-lg text-slate-300 hover:text-primary-500 dark:text-slate-600 dark:hover:text-primary-400 transition-colors"
        aria-label="管理后台"
        title="管理后台"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </a>

      <!-- Logo -->
      <a href="/" class="text-lg font-bold tracking-tight hover:opacity-80 transition-opacity">
        <span class="text-slate-800 dark:text-slate-100">opening</span><span class="text-primary-500">Clouds</span>
      </a>
    </div>

    <!-- Desktop Nav — 滑动药丸 -->
    <div id="nav-pills" class="hidden md:flex items-center gap-0.5 relative">
      <!-- 药丸滑块 -->
      <div id="nav-pill-bg" class="absolute h-8 rounded-full bg-primary-100/80 dark:bg-primary-900/30 transition-all duration-300" style="left:0;width:0;opacity:0;"></div>
      {navItems.map(item => (
        <a
          href={item.href}
          data-nav-pill
          class:list={[
            'relative z-10 px-3 py-1.5 rounded-full text-sm font-medium transition-colors',
            currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
              ? 'text-primary-700 dark:text-primary-300'
              : 'text-slate-500 hover:text-primary-500 dark:text-slate-400 dark:hover:text-primary-400',
          ]}
          data-active={currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) ? 'true' : undefined}
        >
          {item.label}
        </a>
      ))}
    </div>

    <!-- Right: GitHub + Theme + Mobile Menu -->
    <div class="flex items-center gap-1">
      <!-- GitHub -->
      <a
        href="https://github.com/hqy2020"
        target="_blank"
        rel="noopener"
        class="p-2 rounded-lg text-slate-400 hover:text-slate-700 dark:text-slate-500 dark:hover:text-slate-200 transition-colors"
        aria-label="GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
      </a>

      <!-- Theme Toggle -->
      <button
        id="theme-toggle"
        class="p-2 rounded-lg text-slate-400 hover:text-slate-700 dark:text-slate-500 dark:hover:text-slate-200 transition-colors"
        aria-label="切换深色模式"
      >
        <svg id="sun-icon" class="w-5 h-5 hidden dark:block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg id="moon-icon" class="w-5 h-5 block dark:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>

      <!-- Mobile Hamburger -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 rounded-lg text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800"
        aria-label="菜单"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-slate-200 dark:border-slate-700 bg-white/95 dark:bg-slate-900/95 backdrop-blur-md">
    <div class="px-4 py-3 space-y-1">
      {navItems.map(item => (
        <a
          href={item.href}
          class:list={[
            'block px-3 py-2 rounded-lg text-sm font-medium transition-colors',
            currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
              ? 'bg-primary-100 text-primary-700 dark:bg-primary-900/30 dark:text-primary-300'
              : 'text-slate-600 hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-800',
          ]}
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  function initNavbar() {
    // 暗色模式切换
    document.getElementById('theme-toggle')?.addEventListener('click', () => {
      const html = document.documentElement;
      html.classList.toggle('dark');
      localStorage.theme = html.classList.contains('dark') ? 'dark' : 'light';
    });

    // 移动端菜单
    document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
      document.getElementById('mobile-menu')?.classList.toggle('hidden');
    });

    // 药丸滑动效果
    updatePill();
  }

  function updatePill() {
    const pill = document.getElementById('nav-pill-bg');
    const activeLink = document.querySelector('[data-nav-pill][data-active]') as HTMLElement;
    if (!pill || !activeLink) {
      if (pill) pill.style.opacity = '0';
      return;
    }
    const container = document.getElementById('nav-pills')!;
    const containerRect = container.getBoundingClientRect();
    const linkRect = activeLink.getBoundingClientRect();
    pill.style.left = `${linkRect.left - containerRect.left}px`;
    pill.style.width = `${linkRect.width}px`;
    pill.style.opacity = '1';
  }

  // 初始化
  initNavbar();
  // View Transition 后重新初始化
  document.addEventListener('astro:after-swap', initNavbar);
</script>
