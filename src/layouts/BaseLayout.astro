---
/**
 * 基础布局 — 导航栏 + 内容区（可选侧边栏） + 页脚
 */
import Head from './Head.astro';
import Navbar from '@/components/Navbar.astro';
import Sidebar from '@/components/Sidebar.astro';
import Footer from '@/components/Footer.astro';
import BlogPet from '@/components/BlogPet.astro';
import AdminEntry from '@/components/AdminEntry.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  sidebar?: boolean;
}

const { title, description, image, sidebar = true } = Astro.props;
---

<Head title={title} description={description} image={image}>
  <Navbar />
  <main class="flex-1 max-w-6xl mx-auto px-4 py-8 w-full">
    {sidebar ? (
      <div class="flex flex-col lg:flex-row gap-8">
        <div class="flex-1 min-w-0">
          <slot />
        </div>
        <div class="w-full lg:w-72 shrink-0">
          <Sidebar />
        </div>
      </div>
    ) : (
      <slot />
    )}
  </main>
  <Footer />
  {!Astro.url.pathname.startsWith('/admin') && <BlogPet />}
  {!Astro.url.pathname.startsWith('/admin') && <AdminEntry />}
</Head>
