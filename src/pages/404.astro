---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { FadeIn } from '@/react/motion/FadeIn';
---

<BaseLayout title="404 — 迷路了" sidebar={false} fullWidth={true}>
  <div class="flex flex-col items-center justify-center min-h-[70vh] px-4 py-16">
    <FadeIn client:load>
      <img
        src="/media/error/404-lost-sheep.png"
        alt="迷路的小绵羊"
        class="w-56 md:w-72 h-auto mx-auto"
      />
      <h1 class="text-4xl md:text-5xl text-ink-900 dark:text-ink-100 mt-8 text-center">
        404 — 迷路了
      </h1>
      <p class="text-ink-500 dark:text-ink-300 mt-4 text-center text-sm md:text-base">
        这片云层里没有你要找的页面，回到首页看看吧。
      </p>
      <div class="mt-8 text-center">
        <a
          href="/"
          class="inline-flex items-center gap-2 px-6 py-3 rounded-full bg-primary-500 text-white text-sm font-medium transition-all duration-200 hover:bg-primary-600 hover:shadow-glow"
        >
          返回首页
        </a>
      </div>
    </FadeIn>
  </div>
</BaseLayout>
