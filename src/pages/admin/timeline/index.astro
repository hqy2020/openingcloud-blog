<script is:inline>
(function() {
  let currentPage = 1;
  const pageSize = 20;
  const typeIcons = { career: 'ğŸ’¼', learning: 'ğŸ“š', health: 'ğŸ’ª', family: 'ğŸ ', reflection: 'ğŸŒ§ï¸' };
  const typeColors = {
    career: 'border-primary-400',
    learning: 'border-grass-400',
    health: 'border-sun-400',
    family: 'border-primary-300',
    reflection: 'border-gray-400',
  };
  const impactDots = { high: 'ğŸ”´', medium: 'ğŸ”¶', low: 'ğŸ”¹' };

  const container = document.getElementById('timeline-nodes');
  const modal = document.getElementById('timeline-modal');
  const form = document.getElementById('timeline-form');
  const filterType = document.getElementById('filter-type');
  const pageInfo = document.getElementById('page-info');
  const btnPrev = document.getElementById('btn-prev');
  const btnNext = document.getElementById('btn-next');

  async function loadNodes() {
    const params = new URLSearchParams({ page: currentPage, pageSize });
    if (filterType.value) params.set('type', filterType.value);

    const res = await fetch('/api/admin/timeline?' + params);
    const json = await res.json();
    if (!json.ok) return;

    const { nodes, total, page } = json.data;
    const totalPages = Math.ceil(total / pageSize);
    pageInfo.textContent = `ç¬¬ ${page} / ${totalPages || 1} é¡µ (å…± ${total} æ¡)`;
    btnPrev.disabled = page <= 1;
    btnNext.disabled = page >= totalPages;

    if (nodes.length === 0) {
      container.innerHTML = '<div class="text-center text-gray-400 py-8">æš‚æ— æ•°æ®</div>';
      return;
    }

    container.innerHTML = nodes.map(n => `
      <div class="relative bg-white dark:bg-slate-800 rounded-xl p-4 border-l-4 ${typeColors[n.type] || 'border-gray-300'} shadow-sm hover:shadow-md transition-shadow">
        <!-- èŠ‚ç‚¹åœ†ç‚¹ -->
        <div class="absolute -left-[26px] top-5 w-3 h-3 ${n.type === 'reflection' ? 'rotate-45 rounded-[2px]' : 'rounded-full'} bg-white border-2 ${typeColors[n.type] || 'border-gray-400'}"></div>
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-1">
              <span>${typeIcons[n.type] || ''}</span>
              <span class="font-bold">${n.title}</span>
              <span class="text-xs">${impactDots[n.impact] || ''}</span>
              ${n.phase ? '<span class="text-xs bg-gray-100 dark:bg-gray-700 rounded-full px-2 py-0.5">' + n.phase + '</span>' : ''}
            </div>
            <div class="text-xs text-gray-400">
              ${n.start_date}${n.end_date ? ' ~ ' + n.end_date : ' ~ è‡³ä»Š'}
            </div>
            ${n.description ? '<p class="text-sm text-gray-600 dark:text-gray-400 mt-2 line-clamp-2">' + n.description + '</p>' : ''}
          </div>
          <div class="flex gap-2 ml-4 shrink-0">
            <button onclick="editNode(${n.id})" class="text-primary-500 hover:text-primary-600 text-sm cursor-pointer">ç¼–è¾‘</button>
            <button onclick="deleteNode(${n.id})" class="text-red-500 hover:text-red-600 text-sm cursor-pointer">åˆ é™¤</button>
          </div>
        </div>
      </div>
    `).join('');
  }

  function openModal(node) {
    document.getElementById('modal-title').textContent = node ? 'ç¼–è¾‘èŠ‚ç‚¹' : 'æ–°å¢èŠ‚ç‚¹';
    document.getElementById('form-id').value = node ? node.id : '';
    document.getElementById('form-title').value = node?.title ?? '';
    document.getElementById('form-start').value = node?.start_date ?? '';
    document.getElementById('form-end').value = node?.end_date ?? '';
    document.getElementById('form-ongoing').checked = node ? !node.end_date : false;
    document.getElementById('form-type').value = node?.type ?? 'career';
    document.getElementById('form-impact').value = node?.impact ?? 'medium';
    document.getElementById('form-phase').value = node?.phase ?? '';
    document.getElementById('form-desc').value = node?.description ?? '';
    document.getElementById('form-tags').value = node ? JSON.parse(node.tags || '[]').join(', ') : '';
    document.getElementById('form-cover').value = node?.cover ?? '';
    modal.classList.remove('hidden');
  }

  window.editNode = async function(id) {
    const res = await fetch('/api/admin/timeline/' + id);
    const json = await res.json();
    if (json.ok) openModal(json.data);
  };

  window.deleteNode = async function(id) {
    if (!confirm('ç¡®å®šåˆ é™¤æ­¤èŠ‚ç‚¹ï¼Ÿ')) return;
    await fetch('/api/admin/timeline/' + id, { method: 'DELETE' });
    loadNodes();
  };

  document.getElementById('btn-add').addEventListener('click', () => openModal(null));
  document.getElementById('btn-cancel').addEventListener('click', () => modal.classList.add('hidden'));
  modal.addEventListener('click', e => { if (e.target === modal) modal.classList.add('hidden'); });
  filterType.addEventListener('change', () => { currentPage = 1; loadNodes(); });
  btnPrev.addEventListener('click', () => { currentPage--; loadNodes(); });
  btnNext.addEventListener('click', () => { currentPage++; loadNodes(); });

  document.getElementById('form-ongoing').addEventListener('change', e => {
    document.getElementById('form-end').disabled = e.target.checked;
    if (e.target.checked) document.getElementById('form-end').value = '';
  });

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const id = document.getElementById('form-id').value;
    const data = {
      title: document.getElementById('form-title').value,
      start_date: document.getElementById('form-start').value,
      end_date: document.getElementById('form-end').value || null,
      type: document.getElementById('form-type').value,
      impact: document.getElementById('form-impact').value,
      phase: document.getElementById('form-phase').value || null,
      description: document.getElementById('form-desc').value || null,
      tags: document.getElementById('form-tags').value ? document.getElementById('form-tags').value.split(',').map(t => t.trim()).filter(Boolean) : [],
      cover: document.getElementById('form-cover').value || null,
    };

    const url = id ? '/api/admin/timeline/' + id : '/api/admin/timeline';
    const method = id ? 'PUT' : 'POST';
    const res = await fetch(url, { method, headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(data) });
    const json = await res.json();

    if (json.ok) {
      modal.classList.add('hidden');
      loadNodes();
    } else {
      alert(json.error?.message || 'ä¿å­˜å¤±è´¥');
    }
  });

  loadNodes();
})();
</script>
