---
/**
 * 首页 — 全宽沉浸式: Hero + BentoGrid + 生活指标 + 时间线预览
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import { HeroSection } from '@/react/sections/HeroSection';
import BentoGridWrapper from '@/components/BentoGridWrapper.astro';
import LifeIndicatorsWrapper from '@/components/LifeIndicatorsWrapper.astro';
import TimelinePreview from '@/components/TimelinePreview.astro';
---

<BaseLayout title="首页" sidebar={false} fullWidth={true}>
  <!-- Hero -->
  <HeroSection client:load />

  <!-- Bento Grid -->
  <BentoGridWrapper />

  <!-- 生活指标 -->
  <div class="max-w-6xl mx-auto px-4 py-8">
    <LifeIndicatorsWrapper />
  </div>

  <!-- 时间线预览 -->
  <div class="max-w-6xl mx-auto px-4 py-8">
    <TimelinePreview />
  </div>
</BaseLayout>
