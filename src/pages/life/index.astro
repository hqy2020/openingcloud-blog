---
import BaseLayout from '@/layouts/BaseLayout.astro';
import MagazineLayout from '@/components/MagazineLayoutWrapper.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('life', ({ data }) => !data.draft))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const postsForLayout = posts.map(post => ({
  title: post.data.title,
  description: post.data.description,
  date: post.data.date,
  category: post.data.category,
  tags: post.data.tags,
  cover: post.data.cover,
  slug: post.id,
}));
---

<BaseLayout title="生活记录" sidebar={false}>
  <MagazineLayout
    posts={postsForLayout}
    title="生活记录"
    subtitle="照片、旅行与日常随记"
  />
</BaseLayout>
