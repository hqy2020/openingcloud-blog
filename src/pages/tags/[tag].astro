---
/**
 * 标签页 — 展示某个标签下的所有文章（杂志排版）
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import MagazineLayout from '@/components/MagazineLayoutWrapper.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allCollections = await Promise.all([
    getCollection('journal', ({ data }) => !data.draft),
    getCollection('tech', ({ data }) => !data.draft),
    getCollection('learning', ({ data }) => !data.draft),
    getCollection('life', ({ data }) => !data.draft),
  ]);

  const allPosts = allCollections.flat();

  const tagSet = new Set<string>();
  for (const post of allPosts) {
    for (const tag of post.data.tags) {
      tagSet.add(tag);
    }
  }

  return [...tagSet].map(tag => ({
    params: { tag },
    props: {
      tag,
      posts: allPosts
        .filter(p => p.data.tags.includes(tag))
        .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()),
    },
  }));
}

const { tag, posts } = Astro.props;

const postsForLayout = posts.map((post: any) => ({
  title: post.data.title,
  description: post.data.description,
  date: post.data.date,
  category: post.data.category,
  tags: post.data.tags,
  cover: post.data.cover,
  slug: post.id,
}));
---

<BaseLayout title={`#${tag}`} sidebar={false}>
  <MagazineLayout
    posts={postsForLayout}
    title={`#${tag}`}
    subtitle={`共 ${posts.length} 篇文章`}
  />
</BaseLayout>
